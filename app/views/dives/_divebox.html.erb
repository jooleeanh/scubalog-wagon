<div class="container-fluid">
  <div class="header">
    <h2>Your recent dives</h2>
    <div class="dive-navigation-box">
      <% @dives.each do |dive| %>
        <div class="dive-navigation-item">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "waves.jpg" %>');">
            <div class="card-category">
              <%= time_ago_in_words(dive.datetime) %>
              <span>ago</span>
            </div>
            <div class="card-description">
              <h2><%= dive.divesite.name %></h2>
              <p><%= date_long(dive.datetime) %></p>
            </div>
            <%= display_avatar(current_user, "card-user") %>
            <a class="card-link" href="#" ></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>






  <div class="body">
    <div class="dive-title">
    </div>
    <div class="dive-info">
      <h2>Dive info</h2>
      <div class="row">
        <div class="dive-info-box">
          <div class="col-xs-12 col-md-4">
            <div class="dive-info-box-stats text-center">
              <div class="dive-info-box-item">
                <p>Start time</p>
                <%= time_long(@dive.datetime) %>
              </div>
              <div class="dive-info-box-item">
                <div class="col-xs-6">
                  <p>Max depth</p>
                  <%= @dive.max_depth %>
                  <span class="dive-unit">meters</span>
                </div>
                <div class="col-xs-6">
                  <p>Dive time</p>
                  <%= @dive.bottom_time %>
                  <span class="dive-unit">minutes</span>
                </div>
              </div>
              <div class="dive-info-box-item">
                <div class="col-xs-6">
                  <p>Air</p>
                  <span><%= @dive.start_air %></span>
                  <span> - </span>
                  <span><%= @dive.end_air %></span>
                  <span class="dive-unit">BAR</span>
                </div>
                <div class="col-xs-6">
                  <p>Air efficiency</p>
                </div>
              </div>
              <div class="dive-info-box-item">
                <div class="col-xs-6">
                  <p>Temperature</p>
                  <%= @dive.max_temp %>
                </div>
                <div class="col-xs-6">
                  <p>Visibility</p>
                  <%= @dive.visibility %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-md-8">
            <%= line_chart [
              {name: "Time", data: @dive.data_points.pluck(:time, :depth)},
              {name: "Air Consumption", data: @dive.data_points.pluck(:time, :air)},
              {name: "Temperature", data: @dive.data_points.pluck(:time, :temp)}], library: { yAxis: {reversed: true}, xAxis: {reversed: true}}, discrete: true %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="dive-sightings">
      <h2>Sightings</h2>
      <div class="row">
        <% @dive.sightings.each do |sighting| %>
        <div class="col-xs-6 col-md-3">
          <p class="text-center"><%= sighting.animal.name %></p>
          <%=  image_tag(asset_path(sighting.animal.image_url), class: "img-responsive")%>
        </div>
        <% end %>
      </div>
    </div>
    <div class="comments">
      <h2>Comments</h2>
      <p><%= @dive.comments %></p>
    </div>
  </div>
