      <div class="col-xs-12 col-md-7">
        <div class="col-xs-12 col-md-3 text-center following-row">
          <p> <%= @dive.avg_depth.to_i %></p>
          <h6> Depth </h6>
        </div>

        <div class="col-xs-12 col-md-3 text-center following-row">
          <p><%= @dive.bottom_time %></p>
          <h6> Time </h6>
        </div>

        <div class="col-xs-12 col-md-3 text-center following-row">
          <p><%= @dive.types %></p>
          <h6> Type </h6>
        </div>

        <div class="col-xs-12 col-md-3 text-center following-row">
          <p><%= @dive.min_temp.to_i %> Â°C</p>
          <h6> Temp </h6>
        </div>

        <div class="col-xs-12 col-md-4 text-center following-row">
          <p><%= @dive.start_air %> bar</p>
          <h6> Start air </h6>
        </div>

        <div class="col-xs-12 col-md-4 text-center following-row">
          <p><%= @dive.end_air %> bar</p>
          <h6> End air </h6>
        </div>

        <div class="col-xs-12 col-md-4 text-center following-row">
          <p><%= @dive.enjoyment %> </p>
          <h6> Enjoyment </h6>
        </div>
      </div>

      </div>
    </div>

    <div class="row following-graph">
      <div class="col-xs-12" id="container">
        <%= line_chart [
            {name: "Depth", data: @dive.data_points.pluck(:time, :depth)},
            {name: "Air Consumption", data: @dive.data_points.pluck(:time, :air), visible: false},
            {name: "Temperature", data: @dive.data_points.pluck(:time, :temp), visible: false}
            ], library: { yAxis: {reversed: true}, xAxis: {reversed: true}}, discrete: true %>
      </div>
    </div>
</div>
