<div class="container">
  <div class="header">
    5 x divespot cards in flexbox
  </div>
  <div class="body">
    <div class="dive-title">
      The mega cool divespot
      5 years ago on a rainy tuesday
    </div>
    <div class="dive-info">
      <h2>Dive info</h2>
      <div class="row">
        <div class="dive-info-box">
          <div class="col-xs-12 col-md-4">
            <div class="dive-info-box-stats text-center">
              <div class="dive-info-box-item">
                <p>Start time</p>
                <%= time_long(@dive.datetime) %>
              </div>
              <div class="dive-info-box-item">
                <div class="col-xs-6">
                  <p>Max depth</p>
                  <%= @dive.max_depth %>
                  <span class="dive-unit">meters</span>
                </div>
                <div class="col-xs-6">
                  <p>Dive time</p>
                  <%= @dive.bottom_time %>
                  <span class="dive-unit">minutes</span>
                </div>
              </div>
              <div class="dive-info-box-item">
                <div class="col-xs-6">
                  <p>Air</p>
                  <span><%= @dive.start_air %></span>
                  <span> - </span>
                  <span><%= @dive.end_air %></span>
                  <span class="dive-unit">BAR</span>
                </div>
                <div class="col-xs-6">
                  <p>Air efficiency</p>
                </div>
              </div>
              <div class="dive-info-box-item">
                <div class="col-xs-6">
                  <p>Temperature</p>
                  <%= (@dive.min_temp + @dive.max_temp) / 2 %>
                </div>
                <div class="col-xs-6">
                  <p>Visibility</p>
                  <%= @dive.visibility %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-md-8">
            <%= line_chart [
              {name: "Time", data: @dive.data_points.pluck(:time, :depth)},
              {name: "Air Consumption", data: @dive.data_points.pluck(:time, :air)},
              {name: "Temperature", data: @dive.data_points.pluck(:time, :temp)}], library: { yAxis: {reversed: true}, xAxis: {reversed: true}}, discrete: true %>
            </div>
          </div>
        </div>
      </div>
      <div class="dive-sightings">
        <h2>Sightings</h2>
        <div class="row">
          For each animal:
          <div class="col-xs-6 col-md-3">
          </div>
        </div>
      </div>
      <div class="comments">
        text
      </div>
    </div>
  </div>
