<div class="dive-show-info">
  <h2>Dive details</h2>
  <div class="jumbotron">
    <div class="row">
      <div class="col-xs-12 col-md-4">
        <dl class="dl-horizontal">
          <% dive_fields_hash(@dive).each do |field| %>
          <dt><%= field[:key] %></dt>
          <dd>
            <%= field[:value] %>
            <em><%= field[:unit] %></em>
          </dd>
          <% end %>
        </dl>
      </div>
      <div class="col-xs-12 col-md-8" id="container">
        <%= line_chart [
        {name: "Time", data: @dive.data_points.pluck(:time, :depth), library: { yAxis: {reversed: true}, xAxis: {reversed: false}}},
        {name: "Air", data: @dive.data_points.pluck(:air, :depth), library: { yAxis: {reversed: true}, xAxis: {reversed: false}}},
        {name: "Temperature", data: @dive.data_points.pluck(:temp, :depth), library: { yAxis: {reversed: true}, xAxis: {reversed: false}}}] %>
      </div>
    </div>
  </div>
</div>



