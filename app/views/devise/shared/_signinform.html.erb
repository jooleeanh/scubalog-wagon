<div class="container-fluid login">
    <div class="text-center">
      <hr>
        <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook" do %>
          <span class="fa fa-facebook"></span>
          Log in with <%= "#{OmniAuth::Utils.camelize(provider)}" %>
          <% end %>
          <br />
          <% end -%>
        <% end -%>
        <hr>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :first_name, as: :hidden, input_html: { value: 'Scuba' }   %>
          <%= f.input :last_name, as: :hidden, input_html: { value: 'Diver' }   %>
          <%= f.input :location, as: :hidden, input_html: { value: 'Bordeaux' }   %>
          <%= f.input :email, as: :hidden, input_html: { value: 'visitor@scubalog.com' }   %>
          <%= f.input :password, as: :hidden, input_html: { value: 'scubalog' }   %>
          <%= f.input :password_confirmation, as: :hidden, input_html: { value: 'scubalog' }   %>
          <div class="form-actions">
            <%= f.button :submit, 'Sign in as a visitor', class: 'btn' %>
          </div>
        <% end %>
        <hr>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="container-fluid login-form">
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in" %>
        </div>
        </div>
      <% end %>
      <hr>
      <p>Not a member? Sign up!</p>
      <hr>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %><br/>
    </div>
    <hr>
</div>
