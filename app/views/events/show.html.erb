<h2 class="text-center"> Organizer :
  <%= link_to @event.participations.first.user do%>
  <%= @event.participations.first.user.first_name.capitalize %> <%= @event.participations.first.user.last_name.capitalize %>
  <% end %>
</h2>
<div id="map" style="width: 100%; height: 400px;"></div>

<h2 class="text-center event-show-title"> Event's details</h2>

<div class="container block-center" id="event_list">

  <h4> <strong> <%= @event.datetime.strftime("%A, %d, %B, %Y")%></strong></h4>
  <hr>
  <p><strong>- Full Team : </strong>
  <% @event.participations.each do |p|%>
    <%= link_to p.user do%>
      <%= image_tag('user_avatar.png') %>
      <%= p.user.first_name.capitalize%>
    <% end%>
  <% end %>
  <hr>
  </p>
  <p> <strong>- Starting hour : </strong> <%= @event.datetime.strftime("%H")%>H<%= @event.datetime.strftime("%M")%> </p></li>
  <hr>
  <p> <strong>- Description : </strong> <%= @event.description%></p>
  <hr>
</div>

<div class="join-event-button btn btn-primary center-block">
  Join this team !
</div>

<div class="link-back text-center">
  <%= link_to 'Check other events', divesite_events_path(@event.divesite_id) %>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    <%= render 'events/map.js.erb' %>
  <% end %>
<% end %>
