
  <div class="divesite-index-card">
    <div class="row margin-row">
      <div class="col-sm-6">
        <div class="text-divesite-index">
          <h2><%= divesite.name %></h2><p>Difficulty: <%= divesite.difficulty %></p>
          <p>
            Types:
            <% divesite.dives.each do |dive| %>
              <%= dive.types&.capitalize %>
            <% end %>
          </p>
          <p>Max depth: <%= divesite.max_depth %> m</p>
          <%= link_to divesite_path(divesite) do %>
            <button type="button" class="btn btn-banner-sidebar">View this divesite</button>
          <% end %>
        </div>
      </div>
      <div class="col-sm-4">
      <div class="">
          <img src="https://gekodivebali.com/images/gallery/nusa-penida-crystal-bay-gallery/scuba%20dive%20site%20nusa%20penida%20lembongan%20crystal%20bay%20channel%20kanox%20padi%20divemaster%20dive%20guide%20divers.jpg">
        </div>
      </div>
    </div>
  </div>

