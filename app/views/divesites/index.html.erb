<div id="map" style="width: 100%; height: 600px;"></div>

<div class="container">
  <div class="divesite-list">
    <h2 class="divesite-header text-center">
      <%= pluralize(@divesites.size, "divesite") %> à proximité
    </h2>
    <div class="row">
      <% @divesites.each do |divesite| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to divesite_path(divesite) do %>
          <% end %>
      </div>
      <% end %>
    </div>
  </div>
  <% unless @divesites.any? %>
    <div class='text-center'> <strong> Aucun site a proximité...</strong></div>
    <br>
    <div class='text-center'><%= link_to "Page d'accueil", root_path %></div>
  <% end %>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        icon: "/images/mapicon.png"
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <% @divesites.each do |divesite| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to divesite_path(divesite) do %>
          <%= render 'divesites/divesite_cards', divesite: divesite %>
          <% end %>
      </div>
    <% end %>
  </div>
</div>
