<h2>Upcoming events</h2>
<% @divesite.events.where.not(description: nil).each do |event| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
       <% if @divesite.events.blank? %>
        <%= No events yet at @divesite %>
       <% else %>
        <%= link_to event do%>
        <%= event.datetime.strftime("%b %d %Y") %>. Created by :
        <%= event.participations.first.user.first_name.capitalize%>
        <% end %>
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <%= event.description %>
  </div>
</div>
<% end %>
