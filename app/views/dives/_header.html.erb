<div class="dive-show-header">
  <div class="row">
    <div class="col-xs-12 col-sm-3 header-box">

      <h4>
        <%= link_to @dive.divesite.name, @dive.divesite %>
        <%= date_long(@dive.datetime) %>
        <em><%= @dive.divesite.location %></em>
      </h4>
    </div>
    <div class="col-xs-12 col-sm-9">
      <% @dive.photos.each do |photo| %>
        <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
      <% end %>
    </div>
  </div>
</div>
