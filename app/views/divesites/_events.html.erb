<h2 class="divesite-events">Upcoming events @ <%= @divesite.name %></h2>
<% @divesite.events.where.not(description: nil).each do |event| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
    <%= link_to divesite_events_path(@divesite) do %>
     <p>Organized by : <%= event.participations.first.user.first_name.capitalize %> on the <%= event.datetime.strftime("%b %d %Y") %></p>
     <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <%= event.description %>
  </div>
</div>
<% end %>
