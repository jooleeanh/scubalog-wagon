<div class="profil-header">
  <% if @user == current_user %>
    <h2 class="text-center" style="padding-bottom: 10px"><strong>My dashboard</strong></u></h2>
  <% else %>
    <div class="text-center">
      <%= display_avatar(@user, "avatar-big") %>
      <h2><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h2>
    </div>
  <% end %>
</div>

<div class="dashboard-header">
  <i class="fa fa-address-book" style="font-size:28px;"></i>
  <h3>  Summary</h3>
</div>

<div class="container-fluid" id='container-cover'>
  <%= render 'dives/summary' %>
</div>
<div class="dashboard-header">
<%= image_tag ('diver_icon.png'), width: '30px'%>
 <h3> Last dives</h3>
</div>
<div class="container-fluid dive-container">
  <div class="dive-navigator">
    <%= render 'dives/divebox', dives: @user.dives.recent.first(5) %>
  </div>
</div>
