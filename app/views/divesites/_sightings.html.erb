

<h2>Sightings/Animals</h2>

<div class="container">

  <div class="row">
    <% if @divesite.sightings.any? %>
      <div class="col-xs-12 col-md-4 animal-pics">
        <% @splitted_animals[0].each do |animal| %>
        <%= animal.name %><%=  image_tag(animal.image_url, class: "animal-image")%>
        <% end %>
      </div>
      <% if @splitted_animals[1].any? %>
        <div class="col-xs-12 col-md-4 animal-pics">
          <% @splitted_animals[1].each do |animal| %>
          <%= animal.name %><%= image_tag(animal.image_url, class: "animal-image")%>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
