<div class="container divelog">
  <div class="text-center">
    <%= simple_form_for [@dive] do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="container login-form">
          <%= f.input :datetime, as: :date, required: true, autofocus: true %>
          <%= f.association :divesite, collection: @divesites %>
          <%= f.association :animals, collection: @animals, input_html: { multiple: true } %>
          <%= f.input :types, label: 'Dive type'%>
          <%= f.input :bottom_time %>
          <%= f.input :max_depth %>
          <div class="row">
            <div class="col-xs-12 col-sm-6">
              <%= f.input :start_air %>
            </div>
            <div class="col-xs-12 col-sm-6">
              <%= f.input :end_air %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6">
            <%= f.input :max_temp, label: 'Temperature' %>
          </div>
          <div class="col-xs-12 col-sm-6">
            <%= f.input :visibility %>
          </div>
          <%= f.input :enjoyment %>
          <%= f.input :comments, label: 'Personal comments'%>
          <%= f.input :review_content, label: 'Share a tip to fellow divers' %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log this dive !", class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
