<div class="container login">
    <div class="text-center">
      <hr>
        <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook" do %>
          <span class="fa fa-facebook"></span>
          Log in with <%= "#{OmniAuth::Utils.camelize(provider)}" %>
          <% end %>
          <br />
          <% end -%>
        <% end -%>
        <hr>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="container login-form">
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign in" %>
        </div>
        </div>
      <% end %>
      <hr>
      <p>Not a member? Sign up!</p>
      <hr>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %><br/>
    </div>
    <hr>
</div>
